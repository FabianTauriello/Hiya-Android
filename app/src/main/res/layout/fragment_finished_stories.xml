<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="io.github.fabiantauriello.hiya.viewmodels.StoriesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.finished.FinishedStoriesFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragmentFinishedStories_rvFinishedStories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/finished_list_item">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/fragmentFinishedStories_tvEmptyFinishedList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:emptyListMessageVisibility="@{vm.finishedStoryList}"
            android:text="You haven't finished any stories yet. Once you and your co-author has ticked the done button, the story will be recognized as finished and they appear hear."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:pbVisibility="@{vm.finishedStoryList}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>