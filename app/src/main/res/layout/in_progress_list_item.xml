<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="story"
            type="io.github.fabiantauriello.hiya.domain.Story" />
        <variable
            name="coAuthor"
            type="io.github.fabiantauriello.hiya.domain.Author" />
        <import type="io.github.fabiantauriello.hiya.util.Utils"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutStoryItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivStoryPicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:img="@{coAuthor.profilePic}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvStoryTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="@{coAuthor.name}"
            app:layout_constraintBottom_toTopOf="@+id/tvStorySnippet"
            app:layout_constraintEnd_toStartOf="@+id/tvLastUpdateTimestamp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ivStoryPicture"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@sample/story_title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvStorySnippet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvWordCount"
            app:layout_constraintStart_toEndOf="@+id/ivStoryPicture"
            app:layout_constraintTop_toBottomOf="@+id/tvStoryTitle"
            app:storySnippet="@{story}"
            tools:text="@sample/story_long" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLastUpdateTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:text="@{Utils.INSTANCE.formatTimestampToTime(story.lastUpdateTimestamp)}"
            app:layout_constraintBottom_toBottomOf="@+id/tvStoryTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvStoryTitle"
            tools:text="@sample/timestamp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvWordCount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            app:wordCount="@{story}"
            app:layout_constraintBottom_toBottomOf="@+id/tvStorySnippet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvStorySnippet"
            tools:text="@sample/word_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>